@using TestApplication.Common.Dto.UserTypeDtos

@model UserTypeUpdateDto
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Edit Customer Form</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Edit User Type Form</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Edit User Type</h3>

                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    @using (Html.BeginForm("Edit", "UserType", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.HiddenFor(model => model.UserTypeId)
                        <div class="card-body">
                            <div class="input-group">
                                <div class="form-group col-md-4">
                                    <label for="userTypeName">User Type Name</label>

                                    @Html.EditorFor(model => model.UserTypeName, new { htmlAttributes = new { @class = "form-control", placeholder = "User Type Name" } })
                                </div>
                                <div class="form-group col-md-4">
                                    <label>User Type Description</label>

                                    @Html.EditorFor(model => model.UserTypeDescription, new { htmlAttributes = new { @class = "form-control", id = "price", placeholder = "User Type Description" } })
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer form-group">
                            <button type="submit" class="btn btn-primary">Edit</button>
                        </div>
                    }
                </div>
                <!-- /.card -->

            </div>
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>


